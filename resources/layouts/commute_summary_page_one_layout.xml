<resources>
    <layouts>
		<layout id="CommuteSummaryPageOneLayout">
			<drawable id="white_background" />
			
			<!-- Draw the heading with a bar underneath -->
			<label id="commute_start_time" x="center" y="2" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_LARGE"/>
			<drawable id="summary_title_bar" />
			
			<!-- Total Commute Time -->
			<label x="10" y="40" text="Total Time" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_LEFT" font="Gfx.FONT_SMALL"/>
			<label id="total_commute_time" x="180" y="40" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_RIGHT" font="Gfx.FONT_SMALL"/>
			
			<!-- Time Moving -->
			<label x="10" y="60" text="Time Moving" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_LEFT" font="Gfx.FONT_SMALL"/>
			<label id="move_time" x="180" y="60" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_RIGHT" font="Gfx.FONT_SMALL"/>
			
			<!-- Time Stopped -->
			<label x="10" y="80" text="Time Stopped" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_LEFT" font="Gfx.FONT_SMALL"/>
			<label id="stop_time" x="180" y="80" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_RIGHT" font="Gfx.FONT_SMALL"/>
			
			<!-- Number of Stops -->
			<label x="10" y="100" text="Stops" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_LEFT" font="Gfx.FONT_SMALL"/>
			<label id="num_stops" x="180" y="100" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_RIGHT" font="Gfx.FONT_SMALL"/>
			
			<!-- Efficiency -->
			<label x="10" y="120" text="Efficiency" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_LEFT" font="Gfx.FONT_SMALL"/>
			<label id="efficiency" x="180" y="120" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_RIGHT" font="Gfx.FONT_SMALL"/>
			
		</layout>
	</layouts>
</resources>